[[ -s certdata.txt ]] || exit 1
[[ -d dsc/. ]] && exit 1
mkdir dsc
[[ -d dsc/. ]] || exit 1

cd dsc
s=0
while IFS= read -r line; do
	case $s {
	(0)
		if [[ $line = CKA_LABEL* ]]; then
			d=${line#*\"}
			d=${d#「*」 }
			d=${d%\"}
		fi
		[[ $line = "CKA_VALUE MULTILINE_OCTAL" ]] || continue
		s=1
		c=
		;;
	(1)
		if [[ $line = END ]]; then
			s=0
			h=$(printf "$c" | openssl x509 -inform der -noout -hash)
			print -r -- "$d" >$h
		else
			c=$c$line
		fi
		;;
	}
done <../certdata.txt
