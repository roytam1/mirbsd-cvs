[[ -d pem/. ]] || exit 1
[[ -d der/. ]] && exit 1
mkdir der
[[ -d der/. ]] || exit 1

integer i j

for inf in pem/*; do
	h=$(openssl x509 -in "$inf" -noout -hash)
	i=0
	while [[ -e der/$h.$i ]]; do
		let i++
	done
	openssl x509 -in "$inf" -outform der -out der/$h.$i
done
