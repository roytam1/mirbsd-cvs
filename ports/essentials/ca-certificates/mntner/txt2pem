# damage or existence of a defect, except proven that it results out
# of said person's immediate fault when using the work as intended.

[[ -d txt/. ]] || exit 1
[[ -d pem/. ]] && exit 1
mkdir pem
[[ -d pem/. ]] || exit 1

integer i j

for inf in txt/*; do
	h=$(openssl x509 -in "$inf" -noout -hash)
	i=0
	while [[ -e pem/$h.$i ]]; do
		let i++
	done
	openssl x509 -in "$inf" -out pem/$h.$i
	(( i )) || continue
	cs=$(md5 <pem/$h.$i)
	j=0
	while (( j < i )); do
		ts=$(md5 <pem/$h.$j)
		let j++
		[[ $cs = $ts ]] || continue
		rm pem/$h.$i
		break
	done
done
