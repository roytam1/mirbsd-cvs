#!/bin/mksh
# $MirOS: ports/essentials/ca-certificates/mntner/der2nss,v 1.2 2010/12/12 16:17:52 tg Exp $
#-
# Copyright (c) 2009, 2010, 2016
#	mirabilos <m@mirbsd.org>
#
# Provided that these terms and disclaimer and all copyright notices
# are retained or reproduced in an accompanying document, permission
# is granted to deal in this work without restriction, including un-
# limited rights to use, publicly perform, distribute, sell, modify,
# merge, give away, or sublicence.
#
# This work is provided "AS IS" and WITHOUT WARRANTY of any kind, to
# the utmost extent permitted by applicable law, neither express nor
# implied; without malicious intent or gross negligence. In no event
# may a licensor, author or contributor be held liable for indirect,
# direct, other damage, loss, or other issues arising in any way out
# of dealing in the work, even if advised of the possibility of such
# damage or existence of a defect, except proven that it results out
# of said person's immediate fault when using the work as intended.
#-
# To be run with libnss3-tools installed
#
# Requirements:
#	./der/*.[0-9]	→ certs (DER format)
#	./dsc/*		→ descriptions (we assume every one has one!)
#	./tdb/*		→ trust (optional)
# We also assume certs with the same hash have the same description
# and trust (this is not necessarily true, but WFM for now).

[[ -d der/. ]] || exit 1
[[ -d dsc/. ]] || exit 1
[[ -d tdb/. ]] || exit 1
[[ -d nss/. ]] && exit 1
mkdir nss
[[ -d nss/. ]] || exit 1

nl='
'
for a in der/*; do
	bn=${a#*/}
	d=$(<dsc/${bn%.*})
	# convert to old NSS format with sed(1); cf. nss/lib/util/pkcs11n.h
	nss-addbuiltin -n "「$bn」 $d" -t "CT,CT,CT" -i der/$bn | sed \
	    -e 's/CKT_NSS_NOT_TRUSTED/CKT_NETSCAPE_VALID/g' \
	    -e 's/CKT_NSS_MUST_VERIFY_TRUST/CKT_NETSCAPE_TRUST_UNKNOWN/g' \
	    -e 's/\(CK[OT]_\)NSS_/\1NETSCAPE_/g' >nss/$bn
	[[ -s tdb/${bn%.*} ]] || continue
	tSA=; tEP=; tCS=
	while IFS= read -r line; do
		case $line {
		(CKA_TRUST_SERVER_AUTH*)
			tSA=$line ;;
		(CKA_TRUST_EMAIL_PROTECTION*)
			tEP=$line ;;
		(CKA_TRUST_CODE_SIGNING*)
			tCS=$line ;;
		}
	done <tdb/${bn%.*}
	es=
	[[ -n $tSA ]] && es=$es"/^CKA_TRUST_SERVER_AUTH/c$nl$tSA$nl.$nl"
	[[ -n $tEP ]] && es=$es"/^CKA_TRUST_EMAIL_PROTECTION/c$nl$tEP$nl.$nl"
	[[ -n $tCS ]] && es=$es"/^CKA_TRUST_CODE_SIGNING/c$nl$tCS$nl.$nl"
	[[ -n $es ]] && ed -s nss/$bn <<<"${es}wq"
done
