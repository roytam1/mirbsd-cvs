# Let's pull a lazy one.
MACHINE_OS=		Interix
OStype=			Interix

# Interix particulars
OStriplet=		i386-pc-interix3
LOCALBASE=		/usr/mpkg
_PORTPATH?=		${WRKDIR}/bin:${LOCALBASE}/bin:/opt/gcc.3.3/bin:/bin:/usr/contrib/bin:/usr/sbin:/sbin:${X11BASE}/bin:/usr/X11R5/bin
PKG_DBDIR=		${LOCALBASE}/db/pkg
MKSH=			/bin/mksh
OBJECT_FMT=		PE
USE_SYSTRACE=		No
TAR=			/bin/tar
UNZIP=			/usr/contrib/bin/unzip
CHOWN=			/bin/chown
_MAKE_COOKIE=		/bin/touch
GZIP_CMD=		/usr/contrib/bin/gzip -nf ${GZIP}
INSTALL=		${PORTSDIR}/infrastructure/db/install-sh

# These must be installed first!
_CKSUM_A=		${LOCALBASE}/bin/cksum -a
M4=			${LOCALBASE}/bin/gm4
