 static void
 print_warn(void)
 {
+#if defined(HAVE_SYS_PARAM_H) && defined(HAVE_SYS_SYSCTL_H) && \
+    defined(CTL_VM) && defined(VM_SWAPENCRYPT) && defined(SWPENC_ENABLE)
+  int mib[3], swapenc;
+  size_t len;
+
+  mib[0] = CTL_VM;
+  mib[1] = VM_SWAPENCRYPT;
+  mib[2] = SWPENC_ENABLE;
+  len = sizeof (swapenc);
+  if (sysctl(mib, 3, &swapenc, &len, NULL, 0) != -1)
+    if (swapenc != 0)
+      return;
+#endif
   if (!no_warning)
