PATH=@PREFIX@/bin:$PATH

[[ -z $PERL ]] && PERL=/usr/bin/env perl
[[ -z $SKRIPT ]] && SKRIPT=@PREFIX@/bin/dsircp

[[ $1 = -d ]] || eval exec ssfe ${SSFE} ${PERL} \
    ${SKRIPT} ${SIRCOPTS} \"\$@\"

shift
exec ${PERL} ${SKRIPT} "$@"
