 void taia_now(struct taia *t)
 {
+#ifndef __TAI64_BIAS
   struct timeval now;
+
   gettimeofday(&now,(struct timezone *) 0);
   tai_unix(&t->sec,now.tv_sec);
   t->nano = 1000 * now.tv_usec + 500;
   t->atto = 0;
+#else
+  tai64na_t v;
+
+  t->atto = 0;
+  taina_time(&v);
+  t->sec.x = v.secs;
+  t->nano = v.nano;
+#endif /* __TAI64_BIAS */
 }
