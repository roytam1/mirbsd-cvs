#!/bin/sh
# $MirOS: ports/devel/metaauto/files/meta.in,v 1.1.7.1 2005/03/18 15:44:58 tg Exp $
#-
# Idea from Marc Espie.

if test -n "$AUTOTOOLS_VERSION"; then
	test -x @LOCALBASEQ@/bin/@SCRIPT@-"$AUTOTOOLS_VERSION" && \
	    exec @LOCALBASEQ@/bin/@SCRIPT@-"$AUTOTOOLS_VERSION" "$@"
	echo >&2 "Could not find @SCRIPT@-$AUTOTOOLS_VERSION"
	exit 255
fi

echo >&2 "Provide an AUTOTOOLS_VERSION environment variable, please"
test x"$AUTOTOOLS_NOTSET_OK" = x"1"
