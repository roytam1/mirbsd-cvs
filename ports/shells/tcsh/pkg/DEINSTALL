#!/bin/sh
# $MirOS$

PREFIX=${PKG_PREFIX:-/usr/local}

if grep -q $PREFIX/bin/tsch /etc/shells; then
	echo
	echo "+---------------"
	echo "| To properly notify the system that $1 is no longer"
	echo "| available as a shell please remove the followin line"
	echo "| from the /etc/shells file:"
	echo "|           $PREFIX/bin/tcsh"
	echo "+---------------"
	echo
fi

exit 0
