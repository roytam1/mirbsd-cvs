# Compare a to b; if b is newer, replace b with a

: ${MKSH:=$(whence -p mksh)}
copy=

if [[ $1 = -c ]]; then
	copy=-c
	shift
fi

if [ $# -gt 2 ]; then
	set -A parms -- "$@"
	let i=${#parms[*]}-1
	target=${parms[i]}
	unset parms[i]

	if [[ ! -d $target ]]; then
		print -u2 "$target not a directory"
		exit 1
	fi
	set -e
	for src in "${parms[@]}"; do
		$MKSH "$0" $copy "$src" "$target"
	done
	set +e
	exit 0
fi

[[ -r $2 ]] && if cmp "$1" "$2" >/dev/null 2>&1; then
	echo "$2 is unchanged"
	[[ -n $copy ]] || rm -f "$1"
	exit 0
fi

[[ -z $copy ]] || exec cp -f "$1" "$2"
exec mv -f "$1" "$2"
