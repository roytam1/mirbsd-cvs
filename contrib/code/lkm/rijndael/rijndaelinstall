# Called with:
# 1 - module ID (decimal)
# 2 - module type (hex)
# 3 - major device ID

function run {
	print -r -- "$*"
	eval "$@" || exit $?
}

print Loading Rijndael LKM, ID $1, type $2
rm -f /dev/rijndael_{ptr,soft}_{rekey,encr,decr}
run mknod -m 666 /dev/rijndael_soft_rekey c $3 1
run mknod -m 666 /dev/rijndael_soft_encr c $3 2
run mknod -m 666 /dev/rijndael_soft_decr c $3 3
run mknod -m 666 /dev/rijndael_ptr_rekey c $3 4
run mknod -m 666 /dev/rijndael_ptr_encr c $3 5
run mknod -m 666 /dev/rijndael_ptr_decr c $3 6
exit 0
