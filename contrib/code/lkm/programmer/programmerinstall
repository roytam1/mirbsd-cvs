# Called with:
# 1 - module ID (decimal)
# 2 - module type (hex)
# 3 - major device ID

function run
{
	print -r -- "$*"
	eval "$@" || exit $?
}

print Loading Hungry Programmer LKM, ID $1, type $2
rm -f /dev/programmer
run mknod -m 666 /dev/programmer c $3 1
exit 0
