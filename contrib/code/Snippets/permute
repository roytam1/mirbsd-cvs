# Achtung: dieses Skript gibt n! Zeilen (n = $#) aus! (n-Fakult√§t)

function permute
{
	integer i=0
	integer num

	set -A all $*
	num=${#all[*]}
	if (( num == 2 )); then
		print $1 $2
		print $2 $1
		return 0
	fi
	if (( num == 1 )); then
		print $1
		return 0
	fi
	while (( i < num )); do
		local x= y sp=
		integer j=0
		while (( j < num )); do
			if (( j == i )); then
				y=${all[j]}
			else
				x=$x$sp${all[j]}
				sp=" "
			fi
			let j++
		done
		permute $x | sed "s^$y "
		let i++
	done
}

(( $# > 0 )) || return 0
permute $*
