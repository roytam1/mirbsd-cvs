# of said person's immediate fault when using the work as intended.

if [[ $1 = -v ]]; then
	dfd=2
	shift
else
	dfd=-
fi

if [[ $1 = seed ]]; then
	shift
	(print -n '\x0\xc1\x0\x0\x1\xd\x0\x0\x0\x47\x0\x0\x0\xff'; \
	    dd if=/dev/arandom count=1 bs=255 2>/dev/null) | \
	    dd of=/dev/tpm obs=4096 2>/dev/null
	dd if=/dev/tpm bs=4096 count=1 2>/dev/null | hd >&$dfd
fi

printf '\x0\xc1\x0\x0\x0\xe\x0\x0\x0\x46\x0\x0\x1\x0' >/dev/tpm
dd if=/dev/tpm bs=4096 count=1 2>/dev/null | if [[ $1 = - ]]; then
	dd bs=1 skip=14 2>/dev/null
else
	tee /dev/wrandom | hd >&$dfd
	[[ $dfd = - ]] && print -n .
fi
