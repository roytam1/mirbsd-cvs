#!/bin/sh

if [ -z "$1" ]; then
	echo -n "Input file"
	read IF
	[ -z "$IF" ] && exit 1
  else
	IF="$1"
fi

[ -e "$IF" ] && exit 1

let OF=1
let START=0

while : ; do
	echo -n "End: "
	read END
	[ -z "$END" ] && break
	fsplit "$START" -"$END" "$IF" out$OF
	ls -l out$OF
	let OF=OF+1
	let START=END
done

echo Wrote $OF files.
exit 0
