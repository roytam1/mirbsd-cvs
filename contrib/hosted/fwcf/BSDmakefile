  SUBDIR+= lib
  SUBDIR+= mkfwcf
  SUBDIR+= unfwcf
  SUBDIR+= tool
  SUBDIR+= fwcf.helper

test: _SUBDIRUSE

.include <bsd.own.mk>
.if !${COPTS:M-fhonour-copts} || !${CFLAGS:M-fhonour-copts}
CFLAGS+=	${COPTS}
.endif

gmake:
	-rm -rf gmake_test
	mkdir -p gmake_test
	cd gmake_test && lndir -e gmake_test ${.CURDIR}
	cd gmake_test && CC=${CC:Q} CFLAGS=${CFLAGS:M*:Q} gmake

clean_gmake:
	-rm -rf gmake_test

.include <bsd.subdir.mk>

clean: clean_gmake
