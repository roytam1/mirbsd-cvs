if [[ $# != 1 ]]; then
	print -u2 Syntax: $0 oldtag
	exit 1
fi
cd $(dirname $0)/..
result=$(for dir in gnu/usr.bin/perl lib/libc lib/libcurses lib/libdes \
    lib/libedit lib/libform lib/libkvm lib/libm lib/libmenu lib/libocurses \
    lib/libpanel lib/libpcap lib/libpthread lib/libsectok lib/libskey \
    lib/libssl/crypto lib/libssl/ssl lib/libusbhid lib/libutil lib/libz; do
	cvs -Rq diff -ur$1 -ropenbsd $dir/shlib_version
done) 2>&1
print -r -- "$result"
