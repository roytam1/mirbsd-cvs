IMAGESIZE=	2816

.if defined(SERIALSPEED)
FLOPPY?=	floppy${SERIALSPEED}.fs
FLOPPY_BOOTCFG=	cp ${BOOT_TAR} ${WRKDIR}/boot; \
		sed 's/@SPEED@/${SERIALSPEED}/g' \
		    ${TOPDIR}/tools/boot.cfg.serial >${WRKDIR}/boot.cfg
FLOPPYFILES=	boot boot.cfg bsd
.else
FLOPPY_BOOTCFG=	cp ${BOOT_TAR} ${WRKDIR}/boot
.endif

CDROM=		no
INST_FILES=	${FLOPPY}
