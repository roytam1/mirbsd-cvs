	ln ${WRKDIR}/v${OSrev}/${MACHINE}/bsd.rd ${WRKDIR}/bsd	# no commentâ€¦

cdrom-mdboot:
	fgrep ${WRKDIR}/b_${MACHINE}.ldr mkisofs.log | \
	    ${MKSH} ${BOOTSH} -0 24 -S 2 | \
	    dd of=${CDROM} conv=notrunc 2>/dev/null
