#!/bin/sh
# $MirOS: src/scripts/cleanenv,v 1.3 2008/04/11 20:04:10 tg Exp $

p=/bin:/usr/bin:/sbin:/usr/sbin:/usr/X11R6/bin

if test x"$1" = x"-"; then
	shift
	exec /usr/bin/env -i \
	    PATH=$p TZ=UTC HOME=/ \
	    "$@"
fi
exec /usr/bin/env -i \
    PATH=$p TZ=UTC $(locale 2>/dev/null | fgrep LC_CTYPE) \
    DISPLAY="$DISPLAY" HOME="${HOME:-/}" TERM="${TERM:-vt100}" USER="${USER}" \
    "$@"
