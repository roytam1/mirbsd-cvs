user=mirabilos

cd "$(dirname "$0")"

set -A dates
set -A pointses
set -A ids
set -A names
i=0

n=-1
hasmore=1
while (( hasmore )); do
	ftp -o munzeedl.tmp http://www.munzee.com/m/$user/captures/$((++n))/ >&2
	<munzeedl.tmp sed $'s/<section>/\\\n/g' | \
	    perl -ne 'print "$3|$4|$1|$2\n" if ($_ =~ m,^.*<a class="munzee-id" href="/(m/[^"]*)/">([^<]*)</a>.*data-captured-at="(2[0-9][0-9][0-9]-[0-9][0-9]-[0-9][0-9])T.*<div class="stat"> <div class="number"> ([0-9]+) .*$,);' |&
	hasmore=0
	while IFS=\| read -pr date points id name; do
		hasmore=1
		dates[i]=${date:8:2}.${date:5:2}.${date::4}
		pointses[i]=$points
		ids[i]=$id
		names[i++]=$name
		print -ru2 "D: $date $points $id \"$name\""
	done
done
rm -f munzeedl.tmp

print -ru2 Generating output...
print curfinds=0 >munzeedl.out
while (( i-- )); do
	cat <<-EOF
		print -r -- "ID: \$((++curfinds))"
		cat <<'EOI'
			Date: ${dates[i]}
			Waypoint: ${ids[i]}
			Title: ${names[i]}
			Points: ${pointses[i]}
			----
		EOI
EOF
done >>munzeedl.out
