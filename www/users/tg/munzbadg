user=mirabilos

ftp -4 -o - http://www.munzee.com/m/$user/badges/ | \
    sed $'s/<li/\\\n/g' | \
    perl -ne 'print "$3|$1|$2\n" if ($_ =~ m,^.*class="badge-helper"[^>]*data-title="([^"]*)".*<p class=.badge-desc.>([^<]*)</p>.*src="http://static.munzee.com/images/new_badges/small/([^"]*).png".*$,);' | \
    while IFS=\| read -r image title desc; do
	[[ $image = *_null ]] || \
	    print -r -- "mzbadge ${image@Q} ${title@Q} ${desc@Q}"
done
