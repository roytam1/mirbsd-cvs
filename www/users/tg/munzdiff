nl='
'

function doone {
	local s=0 t line

	while IFS= read -r line; do
		case $s$line {
		(0)
			s=1
			;;
		(0ID:\ *)
			continue
			;;
		(0Waypoint:\ m/*/+([0-9]))
			s=2
			t+=${line%%+([	 ])}$nl
			;;
		(0----)
			t=
			;;
		(0*)
			t+=${line%%+([	 ])}$nl
			;;
		(1----)
			s=0 t=
			;;
		(1*)
			;;
		(2)
			s=3
			;;
		(2nTF:\ *)
			continue
			;;
		(2----|3----)
			print -r -- "$t$line"
			s=0 t=
			;;
		(2*)
			t+=${line%%+([	 ])}$nl
			;;
		(3*)
			;;
		(*)
			print -ru2 -- "E: inval ${line@Q}"
			exit 1
			;;
		}
	done
}

a=$(cat "$1" | doone)
b=$(cat "$2" | doone)

diff -u /dev/fd/4 /dev/fd/5 4<<<"$a" 5<<<"$b"
